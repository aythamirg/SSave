        <Button
            android:id="@+id/btnListarSalidasCentro"
            android:text="Listar Salidas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:padding="15dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAnadirNuevaEntrada"
            android:text="Realizar Entradas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/btnListarEntradasCentro"
            android:text="Listar Entradas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

